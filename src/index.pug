            ul.services__boxes.row
                each elem in servicesContent
                    li.services__box.col-12.col-sm-6.col-md-4
                        div.services__box__image
                            img(src=elem.icon, alt="icon",)
                        div.services__box__content(style=`background-image:url(${elem.bg})`)
                            h3.services__box__title=elem.title
                            p.services__box__desc=elem.parag
    //- END services section

    //- START facts & figures section
    section.factsFigures
        .container-lg
            - const factsFiguresContent = [{title: 'Coffe Cups', num: 503, bg: `${assets_base}icon-7.png`},{title: 'Projects', num: 75, bg:`${assets_base}icon-8.png`},{title: 'Working Days', num: 250, bg: `${assets_base}icon-9.png`},{title: 'happy Clients', num: 68, bg:`${assets_base}icon-10.png`}]
            ul.factsFigures__boxes.row
                each fact, key in factsFiguresContent
                    li.factsFigures__box.col-12.col-sm-6.col-md-3(style=`background-image:url(${fact.bg})`)
                        h4.factsFigures__box__title=fact.title
                        h2(id=`fact_${key}`).factsFigures__box__num=fact.num
    //- END facts & figures section

    //- START about content
    section.about
        .container-lg
            div.about__row.row
                div.about__img.col-12.col-sm-6.align-self-center
                    img(src=`${assets_base}monitor.png`, alt="monitor")
                div.about__content.col-12.col-sm-6.align-self-end
                    small.about__helper About us
                    h2.about__title Some Facts About Avonmore
                    p.about__description Etiam eget nulla rhoncus, accumsan felis eget, sollicitudin quam. Fusce venenatis mi sapien, ac tincidunt orci mattis vitae. Donec ac fermentum sapien. Donec tristique ante sit amet velit lacinia elementum. Vestibulum egestas fermentum porttitor.
                    div.about__progresses
                        - const progressesContent = [{title: 'Web Design', percent: 95},{title: 'Graphic Design', percent: 90},{title: 'Photography', percent: 85}]
                        each bar, key in progressesContent
                            div.about__progresses__bar
                                div.progress
                                    div.progress-bar.progress-bar-animated.bg-primary(role="progressbar" style=`width: 0%;` aria-valuenow=`${bar.percent}` aria-valuemin="0" aria-valuemax="100")
                                        span.about__progresses__title=bar.title
                                        span(id=`progress__bar__num__${key}`).about__progresses__percent=bar.percent+'%'
                       
    //- END about content


    





           



